# ghost_cube.obj
# 1x1x1 unit cube (vertices: 0-1 in x,y,z)
# Enhanced for ghostly transparency (pairs with ghost_cube.mtl)
# Import into Blender/OpenGL/etc. with Y-forward, Z-up
#
# Vertices:                        Faces:
#      f-------g                          +-------+ 
#     /.      /|                         /.  5   /|  3 back
#    / .     / |                        / .     / |
#   e-------h  |                   2   +-------+ 1|
#   |  b . .|. c      z          right |  . . .|. +
#   | .     | /       | /y             | . 4   | /
#   |.      |/        |/               |.      |/
#   a-------d         +---- x          +-------+
#                                           6
#                                        bottom

mtllib ghost_cube.mtl
o ghost_cube
g ghost_cube

# Vertices
v 0.0 0.0 0.0  # 1 a
v 0.0 1.0 0.0  # 2 b
v 1.0 1.0 0.0  # 3 c
v 1.0 0.0 0.0  # 4 d
v 0.0 0.0 1.0  # 5 e
v 0.0 1.0 1.0  # 6 f
v 1.0 1.0 1.0  # 7 g
v 1.0 0.0 1.0  # 8 h

usemtl ghost

# Normal vectors (one per face)
vn  1.0  0.0  0.0  # right: cghd
vn -1.0  0.0  0.0  # left:  aefb
vn  0.0  1.0  0.0  # back:  gcbf
vn  0.0 -1.0  0.0  # front: dhea
vn  0.0  0.0  1.0  # top:   hgfe
vn  0.0  0.0 -1.0  # bottom:cdab

# Faces (each = 2 triangles, CCW winding)
# Face 1: right cghd
f 3//1 7//1 8//1
f 3//1 8//1 4//1
# Face 2: left aefb
f 1//2 5//2 6//2
f 1//2 6//2 2//2
# Face 3: back gcbf
f 7//3 3//3 2//3
f 7//3 2//3 6//3
# Face 4: front dhea
f 4//4 8//4 5//4
f 4//4 5//4 1//4
# Face 5: top hgfe
f 8//5 7//5 6//5
f 8//5 6//5 5//5
# Face 6: bottom cdab
f 3//6 4//6 1//6
f 3//6 1//6 2//6